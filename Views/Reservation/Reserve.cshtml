@model SmartPark.Models.Reservation

@{
    ViewData["Title"] = "Reserve Parking Spot";
}

<div class="container mt-4">

    <h2>Reserve Parking Spot @Model.ParkingSpotId</h2>

    <form asp-action="Reserve" method="post">
        @Html.AntiForgeryToken()
        <input type="hidden" asp-for="ParkingSpotId" />

        <div class="form-group mb-3">
            <label>Start Time</label>
            <input asp-for="Start" 
                   class="form-control"
                   type="datetime-local"
                   value="@Model.Start.ToString("yyyy-MM-dd HH:mm")"
                   required />
        </div>

        <div class="form-group mb-3">
            <label>End Time</label>
            <input asp-for="End" 
                   class="form-control"
                   type="datetime-local"
                   value="@Model.End.ToString("yyyy-MM-dd HH:mm")"
                   required />
        </div>

        <button type="submit" class="btn btn-primary">Confirm Reservation</button>
    </form>

    <div>
    <a asp-action="MyReservations">To my reservations</a>
    </div>

</div>
